{
  "name": "my-extension",
  "displayName": "my-extension-id",
  "description": "Translates selected text in Google translate",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "my-extension.translate",
      "title": "Translation"
    }],
    "keybindings": [{
        "command": "my-extension.translate",
        "key": "ctrl+shift+t",
        "when": "editorTextFocus" 
      }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.16.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
